<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeBackgroundColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_margin="@dimen/margin_medium"
        android:animateLayoutChanges="true"
        android:background="@drawable/bg_search"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="0dp"
        android:paddingTop="@dimen/padding_medium"
        android:paddingEnd="0dp"
        android:paddingBottom="@dimen/padding_medium">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btSearch"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_baseline_search_24"
            app:tint="?attr/themeTextColor" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="@string/input_your_city"
            android:singleLine="true"
            android:textColor="?attr/themeTextColor"
            android:textColorHint="?attr/themeTextColor"
            android:textSize="@dimen/txt_large"
            tools:text="Saigon" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btClearText"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginStart="@dimen/margin_small"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_baseline_clear_24"
            android:visibility="gone"
            app:tint="?attr/themeTextColor"
            tools:visibility="visible" />
    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/layoutContainerOfflineKey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/layoutContainerOnlineSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium" />

</LinearLayout>
